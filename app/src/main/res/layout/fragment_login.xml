<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:singleLine="true"
        android:id="@+id/fragment_login_username"
        android:layout_marginBottom="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/fragment_login_username"
        android:id="@+id/fragment_login_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_below="@id/fragment_login_password"
        android:background="@color/primary_color_darker"
        android:textColor="#ffffff"
        android:id="@+id/fragment_login_login_button" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_login_progress_bar"
        android:layout_alignTop="@id/fragment_login_login_button"
        android:layout_alignBottom="@id/fragment_login_login_button"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminateOnly="true"
        style="?android:attr/progressBarStyleInverse"/>
</RelativeLayout>